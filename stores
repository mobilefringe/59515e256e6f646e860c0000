<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    });
    
    function renderAll(){
        var stores = getStoresList();
        var categories = getStoreCategories();
        
        
        //renderGeneral('#category_list_container','#category_list_template', categories);
        var stores_dine = getStoresListByCategoryID(3744);
        renderStoreList('#dine_stores_container','#dine_stores_template', stores_dine);
        $("#dine").click(function(){
            $("#dine_stores_container").toggle();
        });
        show_content();
        
    }
    
    
</script>