<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    });
    
    function renderAll(){
        //var stores = getStoresList();
        var all_categories = getStoreCategories();
        
        //renderGeneral('#category_list_container','#category_list_template', categories);
        var stores_dine = getDineStores(all_categories);
        var stores_shop =getShopStores(all_categories);
        var stores_play =getPlayStores(all_categories);
        stores_dine =sortByStoresName(stores_dine);
        stores_shop =sortByStoresName(stores_shop);
        stores_play =sortByStoresName(stores_play);
        renderStoreList('#dine_stores_container','#dine_stores_template', stores_dine);
        $("#dine").click(function(){
            $("#dine_store_list").toggle();
            $("#dine .up_arrow").toggle();
        });
        renderStoreList('#shop_stores_container','#shop_stores_template', stores_shop);
        $("#shop").click(function(){
            $("#shop_store_list").toggle();
            $("#shop .up_arrow").toggle();
        });
        
        //Apparel
        show_content();
        
    }
</script>