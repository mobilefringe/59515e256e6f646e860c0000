<script>
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
    });
    
    function renderAll(){
        var stores = getStoresList();
        var categories = getStoreCategories();
        
        
        //renderGeneral('#category_list_container','#category_list_template', categories);
        var stores_dine = (getStoresListByCategoryID(3744)).concat(getStoresListByCategoryID(3633));
        var unique_stores= stores_dine.reduce(function(a,b){if(a.indexOf(b)<0)a.push(b);return a;},[]);
        console.log(stores_dine,"and",unique_stores);
        renderStoreList('#dine_stores_container','#dine_stores_template', unique_stores);
        $("#dine").click(function(){
            $("#dine_store_list").toggle();
        });
        show_content();
        
    }
</script>